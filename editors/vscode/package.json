{
  "name": "weltenwanderer",
  "displayName": "Weltenwanderer",
  "description": "Language support for Weltenwanderer (.ww) world-building files",
  "version": "0.1.0",
  "publisher": "weltenwanderer",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ww"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ww",
        "aliases": [
          "Weltenwanderer",
          "ww"
        ],
        "extensions": [
          ".ww"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ww",
        "scopeName": "source.ww",
        "path": "./syntaxes/ww.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Weltenwanderer",
      "properties": {
        "weltenwanderer.lspPath": {
          "type": "string",
          "default": "ww-lsp",
          "description": "Path to the ww-lsp binary"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
